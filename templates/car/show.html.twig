{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Matricule</th>
                <td>{{ car.matricule }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ car.marque }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ car.model }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ car.category }}</td>
            </tr>
            <tr>
                <th>Carburant</th>
                <td>{{ car.carburant }}</td>
            </tr>
            <tr>
                <th>Year</th>
